.toolbar-container
  background-color: black
  width: 80%
  height: 20px
  margin: 0 auto
  padding: 20px 30px

  .toolbar

    .toolbar-title
      color: white
      float: left
      font-size: 20px
      font-weight: bold

    .toolbar-item

      colors = red, green, blue
      for num in 2 3 4
        &:nth-child({num})
          a
            &:hover
              background-color: colors[num - 2]

      a
        padding: 10px 30px
        margin: 0 10px
        background-color: white
        color: black
        text-decoration: none

        &:hover
          background-color: gray
          color: white
